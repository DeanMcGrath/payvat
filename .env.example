# Environment variables for PAY VAT application
# SECURITY: Never commit the actual .env.local file to version control
# Copy this file to .env.local and fill in your actual values

# API Configuration
NEXT_PUBLIC_API_URL=https://payvat.ie/api
API_SECRET_KEY=your_api_secret_key_here

# NextAuth Configuration
NEXTAUTH_URL=https://payvat.ie
NEXTAUTH_SECRET=your_nextauth_secret_here

# Authentication
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_here
AUTH_COOKIE_NAME=vat_auth_session
AUTH_COOKIE_MAX_AGE=86400

# Database (PostgreSQL for production)
DATABASE_URL=postgresql://username:password@host:5432/database_name

# Payment Gateway (Stripe - Production Keys)
# Get your keys from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key_here
STRIPE_SECRET_KEY=sk_live_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Revenue API (Production)
REVENUE_API_URL=https://api.revenue.ie
REVENUE_API_KEY=your_revenue_api_key_here
REVENUE_CLIENT_ID=your_revenue_client_id_here

# Security
CSRF_SECRET=your_csrf_secret_here
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000
ENCRYPTION_KEY=your_encryption_key_here

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,csv,xlsx,xls,jpg,jpeg,png

# Environment
NODE_ENV=production

# Admin Settings
ADMIN_EMAIL=your_admin_email_here
ADMIN_PASSWORD_HASH=your_bcrypt_password_hash_here

